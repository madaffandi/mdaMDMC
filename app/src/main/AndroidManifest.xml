<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="achmadaffandi.mdamdmc">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key"/>

        <activity android:name="achmadaffandi.mdamdmc.MapLocation"></activity>
        <activity
            android:name="achmadaffandi.mdamdmc.LoginActivity"
            android:label="mdaMDMC"
            android:theme="@style/AppFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="achmadaffandi.mdamdmc.CreateDisasterActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="achmadaffandi.mdamdmc.InitiateDisasterActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="achmadaffandi.mdamdmc.ForgetPassActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="achmadaffandi.mdamdmc.IntroActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="achmadaffandi.mdamdmc.DisListActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="achmadaffandi.mdamdmc.DashboardDisasterActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="achmadaffandi.mdamdmc.DisDetailActivity"
            android:theme="@style/AppFullScreenTheme" />
        <activity
            android:name="achmadaffandi.mdamdmc.SignUpActivity"
            android:theme="@style/AppFullScreenTheme" />
    </application>

</manifest>